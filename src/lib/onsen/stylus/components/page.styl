.page
  background -webkit-linear-gradient(end-grad-blue, begin-grad-blue) !important /* For Safari 5.1 to 6.0 */
  background -o-linear-gradient(end-grad-blue, begin-grad-blue) !important /* For Opera 11.1 to 12.0 */
  background -moz-linear-gradient(end-grad-blue, begin-grad-blue) !important /* For Firefox 3.6 to 15 */
  background linear-gradient(end-grad-blue, begin-grad-blue) !important /* Standard syntax */
  reset-font()
  position absolute
  top 0px
  left 0px
  right 0px
  bottom 0px
  overflow visible
  font-size var-font-size
  color var-text-color
.page::-webkit-scrollbar
  display none

.page__content
  background -webkit-linear-gradient(end-grad-blue, begin-grad-blue) !important /* For Safari 5.1 to 6.0 */
  background -o-linear-gradient(end-grad-blue, begin-grad-blue) !important /* For Opera 11.1 to 12.0 */
  background -moz-linear-gradient(end-grad-blue, begin-grad-blue) !important /* For Firefox 3.6 to 15 */
  background linear-gradient(end-grad-blue, begin-grad-blue) !important /* Standard syntax */
  position absolute
  top 0px
  left 0px
  right 0px
  bottom 0px
  box-sizing border-box
  margin-top -1px

.page__background
  background-color var-page-background-color
  position absolute
  top 0px
  left 0px
  right 0px
  bottom 0px
  box-sizing border-box

.content-padded
  padding 8px

.page--white-bg.page--white-bg
  &, .page__content
      background: white !important
