.map
  position absolute
  height 94vh !important
  width 100%
  margin 0
  padding 0
  z-index -1

.search-input-map
  width 80%
  z-index 1
  margin-left auto
  margin-right auto
  box-shadow rgba(0, 0, 0, 0.298039) 0px 1px 4px -1px
  height 40px

.search-bar
  margin-top 10%

.map-back-button
  position absolute
  margin-left -106px
  margin-top 50px
  left 50%
  bottom 40px

.location-finder
  position absolute
  bottom 42px
  right 20px
  padding 11px
  border-radius 100%
  text-align center
  font-size 18px
  line-height 0
  background-color white
  color grey
  // border 1px solid qantas-red
  box-shadow: rgba(0,0,0,0.298) 0px 8px 19px -8px;

.location-finder ion-icon
  padding-top 13px
  height 44px
  width 44px

.map-pin
  position absolute
  /**
   * The ion-location icon has arbitrary white space at the top + bottom of the icon glyph
   * so we have to do some manual vertical positioning
   **/
  top calc(50vh - 67px)
  font-size 55px
  line-height 0
  left calc(50% - 24px)
  color brand-blue
  pointer-events none
  width 50px
  text-align center
