// Search input
.search-panel
    display: flex
    margin 11px 10px 2px 10px
    overflow: hidden

.search-panel__field
    flex: 1 0 100%
    position: relative
    overflow: hidden
    transition: 180ms ease-in-out

    .search-panel--has-text &
        flex: 1 1 auto

.search-panel__input
    // There's some dodgy positioning in here.
    // If you change the size of the text, ensure it's still centered
    // properly by adjusting top and left
    position: absolute
    left: -24px
    top: 7px
    width: 65%
    padding: 0
    margin: 0
    border: none

    text-align left
    background: none
    -webkit-appearance none
    font: inherit

    transform: translateX(50%)
    transition: 180ms ease-in-out

    &:focus, &:valid
        transform: translateX(35px)
        left: 0

    color: #353752 !important

.search-panel__input::-webkit-input-placeholder,
.search-panel__input::-moz-placeholder,
.search-panel__input::-ms-input-placeholder
    color #999

.search-panel__button
    flex: 0 0 auto
    bottom: 4px
    font-size: 14px
    color color-gray-darker
    // Account for margin but leave larger tap target
    margin-right: -10px

input[type=search]:blur + .search-button
    opacity 0

input[type=search]:focus + .search-button
    opacity 1

// User search results

.list-item-container
    overflow: auto
    padding 15px 0px 15px 15px
    line-height 1
    font-size 14px

.list-item-container--action
    margin-bottom 25px

.list-item-container--hidden
    border none !important

.list-item-left
    width 60px
    margin-right -60px
    float left

.list-item-right
    width 100%
    float right

.list-item-content
    margin-left 50px
    margin-right 30px

.avator
    width 40px
    height 40px
    border-radius 50%

.name
    font-weight 500
    line-height 16px
    font-size 15px
    margin-bottom 6px

.desc
    line-height 16px

.lucent
    opacity 0.4