.profile-card
    width 100%
    text-align center
    color color-gray-darker
    padding 30px 0 0 0
    line-height 1.6

.profile-image
    height 100px
    width 100px
    border-radius 50px
    -webkit-border-radius 50px
    background-color black

.profile-name
    margin 20px 0 0 0
    font-weight 600
    font-size 17px

.profile-store
    margin 0 0 5px 0
    font-size 14px
    color color-gray-darker

.profile-desc
    font-size font-size-base
    width 90%
    text-align center
    margin 0 auto
    color color-gray-darker

.profile-desc--cell
    width auto
    text-align left
    color color-gray-darker
    padding-bottom (spacing / 10)

.info-col
    height 60px
    line-height 1
    padding 12px 0 12px 4px

.info-num
    font-size 16px
    font-weight 500
    opacity 0.8

.info-unit
    margin-top 6px
    font-size 14px
    opacity 0.4

// Old-style avatar
.avatar
    width 100px
    height 100px
    border-radius 50px

.avatar--sm
    width 50px
    height 50px
    border-radius 50px

.avatar-block
    position relative
    padding-bottom 8px

.avatar-block--icon,
.avatar-block--spinicon
    color white
    font-size 80px
    position absolute
    top 13%
    left 50%
    line-height 1
    transform translate(-50%)

.avatar-block--spinicon
    top: 10%
    left: 10%

    ons-icon[spin="true"]&
        animation-duration: 3s

// New-style avatar
.avatar-block
    text-align: center
    font-size: 0

.profile__avatar
    _size = 100px
    position: relative
    display inline-block
    width _size
    height _size
    border-radius _size
    overflow: hidden
    border 3px solid rgba(128, 128, 128, 0.42)

.profile__avatar__img
    position: relative
    z-index: 1
    width: 100%
    border-radius 50%

.profile__avatar__input
.profile__avatar__overlay
    position absolute
    top: 0
    right: 0
    left: 0
    bottom: 0

.profile__avatar__input
    z-index: 3
    opacity 0

.profile__avatar__overlay
    background: rgba(0,0,0,.25)
    z-index: 2
    transition: 100ms ease-in-out

.profile__avatar__input:active + .profile__avatar__overlay
    background: rgba(0,0,0,.6)


// edit profile

ons-list-item
  & > ons-icon
    margin 0 4px 0 0
    opacity 0.8

.list-item-action
    position absolute
    right 10px
    top 0px
    font-size 20px
    opacity 0.3

a
  .list-item-action
    & > ons-icon
      margin-top 14px

.list-item-note
    position absolute
    right 36px
    top 0px
    font-size 14px
    & > .notification
      margin-top 12px

.lucent
    opacity 0.4