.item
  padding 10px
  line-height 1
  height 91px
  overflow hidden

.item-thum
  width 70px
  height 70px
  border-radius 4px
  margin-right 15px

.item-title
  line-height 1.3
  font-size 15px
  font-weight 500

.item-label
  line-height 1.3
  font-size 12px
  color #999
  position absolute
  bottom 15px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  width calc(100% - 140px)

.item-desc
  line-height 1.3
  margin 4px 0 0 0
  padding 0 30px 0 0
  max-height 30px

.item-content
  line-height 0

.ons-row-inner
  padding-top 15px
  padding-bottom 15px
